<?xml version="1.0"?>

<launch>

	<!-- Launch HSR -->
	<include file="$(find hsrb_gazebo_launch)/launch/hsrb_megaweb2015_world.launch">
		<arg name="paused" value="false" />
	</include>

	<!-- Launch Agent -->
	<include file="$(find hsrb_gazebo_launch)/launch/agent.launch">
		<arg name="paused" value="false" />
	</include>

	<!-- Launch STL monitor (output console) -->
	<node name="hsr_monitor" pkg="hsr_monitors" type="hsr_monitor.py" output="screen" args="--freg 10">
	</node>

</launch>
