<?xml version="1.0"?>

<launch>

	<!-- Launch STL monitor (output console) -->
	<node name="hsr_monitor" pkg="hsr_monitors" type="hsr_monitor.py" output="screen" args="--freq 10">
	</node>

	<!-- Launch rqt_plots -->
	<arg name="rqt_plot" default="false" />
	<group if="$(arg rqt_plot)">
	  	<node name="rob_system_plot" pkg="rqt_plot" type="rqt_plot" args="
			/rtamt/system/collEgoObs_gt/value
		  	/rtamt/system/collEgoDynamicObs_gt/value
			/rtamt/system/avoidProhibitArea_gt/value
		  	/rtamt/system/reachEgoGoal_gt/value"/>
		<node name="rob_perception_plot" pkg="rqt_plot" type="rqt_plot" args="
			/rtamt/perception/errLoc/value
			/rtamt/perception/errWheelOdom/value
			/rtamt/perception/errLaserOdom/value
		  	/rtamt/perception/errLidar/value"/>
		<node name="rob_planner_plot" pkg="rqt_plot" type="rqt_plot" args="
			/rtamt/planner/collEgoObs/value
			/rtamt/planner/collEgoDynamicObs/value
			/rtamt/planner/avoidEgoProhibitArea/value
		  	/rtamt/planner/collLidar/value
			/rtamt/planner/collStereoCamera/value
			/rtamt/planner/collBumperFront/value
			/rtamt/planner/collBbumperBack/value
		  	/rtamt/planner/collGlobalPathObs/value
			/rtamt/planner/reachGlobalPathGoal/value
			/rtamt/planner/reachEgoGoal/value"/>
	  	<node name="rob_controller_plot" pkg="rqt_plot" type="rqt_plot" args="
			/rtamt/controller/referrLocGlobalPath/value
		  	/rtamt/controller/referrBodyVel/value
		  	/rtamt/controller/referrWheelVelL/value
			/rtamt/controller/referrWheelVelR/value"/>
	</group>

</launch>
